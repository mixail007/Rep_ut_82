// Инициализация формы
Процедура Инициализировать(ПостроительОтчета) Экспорт
	
	Построитель = ПостроительОтчета;
	
	ЭлементыФормы.Колонки.СоздатьКолонки();
	
	ОбновитьПредставление();
	
КонецПроцедуры	// Процедура Инициализировать

// Процедура обновления представления формы
Процедура ОбновитьПредставление()

	Если Построитель.ТипАнализа = Тип("АнализДанныхОбщаяСтатистика") Тогда 
		
		Заголовок = НСтр("ru='Параметры: Общая статистика'");
		КартинкаЗаголовка = ЭлементыФормы.КартинкаОбщаяСтатистика.Картинка;
		
	КонецЕсли;
	
КонецПроцедуры	// ОбновитьПредставление()

