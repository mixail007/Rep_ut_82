	КартинкаЗаголовка= ЭДО_БиблиотекаКартинок().КартинкаЗаголовка;
	
	Если Режим = 1 Тогда
		Заголовок=									"Подписание документа";
		ЭлементыФормы.НадписьЗаголовок.Заголовок=	"Подписать документ?";
		ЭлементыФормы.ОтказБудетподписан.Заголовок=	"Документ будет подписан:";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Текст=		"Подписать";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Подсказка=	"Подписать документ";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Пояснение=	"Подписать документ";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Картинка=		ЭДО_БиблиотекаКартинок().КартинкаПодписатьИОтправить;
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Отображение=	ОтображениеКнопкиКоманднойПанели.НадписьКартинка;
	ИначеЕсли Режим = 2 Тогда
		Заголовок=									"Аннулирование документа";
		ЭлементыФормы.НадписьЗаголовок.Заголовок=	"Аннулировать документ?";
		ЭлементыФормы.ОтказБудетподписан.Заголовок=	"Соглашение об аннулировании будет подписано:";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Текст=		"Аннулировать";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Подсказка=	"Аннулировать документ";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Пояснение=	"Аннулировать документ";
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Картинка=		ЭДО_БиблиотекаКартинок().КартинкаОтказатьВПодписи;
		ЭлементыФормы.ОсновныеДействияФормы.Кнопки.ОсновныеДействияФормыВыполнить.Отображение=	ОтображениеКнопкиКоманднойПанели.НадписьКартинка;
	КонецЕсли;
	
