								иначеЕсли ставка <>	строка(стр11.Ставка) тогда
									текстМес1 = текстМес1 +мес1+?(мес2=мес1,""," - "+мес2)+": "+ставка+"%, ";
									
									ставка = строка(стр11.Ставка);
