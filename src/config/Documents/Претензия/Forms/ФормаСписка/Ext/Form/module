
Процедура ДействияФормыДействиеОтчетПретензии(Кнопка)
	Отчет=Отчеты.ОтчетПоПретензиям.Создать();
	ФормаОтчета=Отчет.ПолучитьФорму();
	ФормаОтчета.Открыть();
КонецПроцедуры

Процедура ДокументСписокПриВыводеСтроки(Элемент, ОформлениеСтроки, ДанныеСтроки)
	Причина="";
	Кладовщик="";
	Ответственный="";
	тч=ДанныеСтроки.Ссылка.Состав;
	для каждого стр из тч Цикл
		Если Найти(Причина,Стр.Причина)=0 тогда
			Причина=Причина+?(СтрДлина(Причина)>0,", ","")+Стр.Причина;
		КонецЕсли;
		Если Найти(Кладовщик,Стр.Кладовщик)=0 тогда
			Кладовщик=Кладовщик+?(СтрДлина(Кладовщик)>0,", ","")+Стр.Кладовщик;
		КонецЕсли;
		Если Найти(Ответственный,Стр.ОтветственныйЗаПретензию)=0 тогда
			Ответственный=Ответственный+?(СтрДлина(Ответственный)>0,", ","")+Стр.ОтветственныйЗаПретензию;
		КонецЕсли;
	КонецЦикла;
	ОформлениеСтроки.Ячейки.Причина.ОтображатьТекст = Истина;
	ОформлениеСтроки.Ячейки.Причина.Текст=Причина;
	
	ОформлениеСтроки.Ячейки.Кладовщик.ОтображатьТекст = Истина;
	ОформлениеСтроки.Ячейки.Кладовщик.Текст=Кладовщик;
	
	ОформлениеСтроки.Ячейки.Ответственный.ОтображатьТекст = Истина;
	ОформлениеСтроки.Ячейки.Ответственный.Текст=Ответственный;
КонецПроцедуры
