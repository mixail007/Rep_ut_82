
Процедура ПриОткрытии()
	Если не РольДоступна("яштФинДиректор") Тогда
		Список.Отбор["Ответственный_"].Использование = Истина;
		Список.Отбор["Ответственный_"].ВидСравнения = ВидСравнения.Равно;
		Список.Отбор["Ответственный_"].Значение = глТекущийпользователь;;
		ЭлементыФормы.Список.НастройкаОтбора["Ответственный_"].Доступность = Ложь;
	конецЕсли;
	
	
	Если глТекущийПользователь = Справочники.Пользователи.НайтиПоКоду("Марешева И.Г.") Тогда
		
		СписокЗнч = Новый СписокЗначений;
		СписокЗнч.Добавить(Справочники.Пользователи.НайтиПоКоду("Красюк Н.В.(руководитель)"));
		СписокЗнч.Добавить(Справочники.Пользователи.НайтиПоКоду("Лигута А.С.(руководитель)"));
		СписокЗнч.Добавить(Справочники.Пользователи.НайтиПоКоду("Марешева И.Г."));
		
		
		Список.Отбор["Ответственный_"].Использование = Истина;
		Список.Отбор["Ответственный_"].ВидСравнения = ВидСравнения.ВСписке;
		Список.Отбор["Ответственный_"].Значение = СписокЗнч;
		ЭлементыФормы.Список.НастройкаОтбора["Ответственный_"].Доступность = Ложь;
   конецЕсли;

	
	
	
	
	
	
КонецПроцедуры

Процедура СписокПередНачаломДобавления(Элемент, Отказ, Копирование)
	Если копирование Тогда
		Сообщить("Документы копировать нельзя!");
		Отказ =Истина;
	конецЕсли;	
КонецПроцедуры
