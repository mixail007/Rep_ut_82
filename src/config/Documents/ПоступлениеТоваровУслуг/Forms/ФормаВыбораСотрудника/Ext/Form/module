
Процедура СправочникСписокВыбор(Элемент, ВыбраннаяСтрока, Колонка, СтандартнаяОбработка)
	
	СтандартнаяОбработка = Ложь;
	
	Если Не((ВыбраннаяСтрока.ЭтоГруппа = Истина) или (Отобранные.Найти(ВыбраннаяСтрока,"Сотрудник") <> Неопределено)) или (Кладовщики и не(ВыбраннаяСтрока.ЭтоГруппа = Истина)) Тогда 		
		Стр = Отобранные.Добавить();
		Стр.Сотрудник = ВыбраннаяСтрока;
	КонецЕсли;	
	
	Если ((ВыбраннаяСтрока.ЭтоГруппа = Истина)) Тогда
		СтандартнаяОбработка = Истина;
	КонецЕсли;
	
КонецПроцедуры

Процедура КоманднаяПанель2ОК(Кнопка)
	
	ТаблицаВозврата = Отобранные.Скопировать();
	Закрыть(ТаблицаВозврата);
	
КонецПроцедуры

Процедура КоманднаяПанель1Очистить(Кнопка)
	Отобранные.Очистить();
КонецПроцедуры

Процедура ПриОткрытии()
	
	СС = новый СписокЗначений;	
	Если (ТипЗнч(СС) 		= ТипЗнч(ОтобранныеСотрудники)) Тогда
		Для й=0 по ОтобранныеСотрудники.Количество()-1 Цикл
			Стр1			= ОтобранныеСотрудники.Получить(й);
			Стр 			= Отобранные.Добавить();
			Стр.Сотрудник 	= Стр1.Значение;
		КонецЦикла
	КонецЕсли;
	
КонецПроцедуры
