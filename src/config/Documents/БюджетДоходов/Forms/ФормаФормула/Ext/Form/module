
Процедура ДействияФормыПеренести(Кнопка)
	Формула = "Оплата сразу("+Сразу+"%) + "+Строка(месяц1)+"(мес.)*"+Строка(оплата1)+"(%) + "+Строка(месяц2)+"(мес.)*"+Строка(оплата2)+"(%)";
	Параметры = Новый Структура;
	Параметры.Вставить("Сразу",Сразу);
	Параметры.Вставить("месяц1",месяц1);
	Параметры.Вставить("оплата1",оплата1);
	Параметры.Вставить("месяц2",месяц2);
	Параметры.Вставить("оплата2",оплата2);
	Параметры.Вставить("Формула",Формула);
	
	ЭтаФорма.Закрыть(Параметры);
КонецПроцедуры

Процедура ПриОткрытии()
	Проценты = 100;
КонецПроцедуры

Процедура ПолеВвода1ПриИзменении(Элемент)
	Проценты = 100-сразу-оплата1 -оплата2;
КонецПроцедуры

