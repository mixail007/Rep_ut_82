
Процедура ПриОткрытии()
	
	//отбор по Направлению продаж и Ответственному 
	Если НЕ (РольДоступна("ПолныеПрава") 
		 или Найти(глТекущийПользователь.Код, "Бондаренко")>0
		     ) тогда
			 
			 
			 Если глТекущийПользователь = глТекущийПользователь.НаправлениеПродаж.Руководитель 
			  или ГлТекущийПользователь.ОсновноеПодразделение.Руководитель = ГлТекущийПользователь  //+++ 18.04.2016 - руководитель Подразделения - тоже все видит
			 тогда
			ДокументСписок.Отбор.НаправлениеПродаж.ВидСравнения = ВидСравнения.Равно;
			ДокументСписок.Отбор.НаправлениеПродаж.Значение =  глТекущийПользователь.НаправлениеПродаж;
			ДокументСписок.Отбор.НаправлениеПродаж.Использование = истина;
			ЭлементыФормы.ДокументСписок.НастройкаОтбора["НаправлениеПродаж"].Доступность = ложь;
		Иначе
			ДокументСписок.Отбор.Ответственный.ВидСравнения = ВидСравнения.Равно;
			ДокументСписок.Отбор.Ответственный.Значение =  глТекущийПользователь;
			ДокументСписок.Отбор.Ответственный.Использование = истина;
			ЭлементыФормы.ДокументСписок.НастройкаОтбора["Ответственный"].Доступность = ложь;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры
