		//				Иначе
		//					Сообщить(Ответ);

		//					мАннулировать = Истина;
		//					Отказ = Истина;

		//				КонецЕсли;

		//			КонецЦикла;
		//		Иначе
	 ОтменаЧека();
	//			КонецЕсли;
	//		КонецЕсли;
