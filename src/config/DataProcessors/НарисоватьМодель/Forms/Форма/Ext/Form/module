
Процедура КнопкаВыполнитьНажатие(Кнопка)
	ОтобратьРисунок();
КонецПроцедуры	


Процедура ПриОткрытии()
	      ОтобратьРисунок();
КонецПроцедуры
	

Процедура ОтобратьРисунок()
	Если номенклатура.Пустая() тогда //BugFix: 19.03.2019
		// Ошибка при вызове метода контекста (ПолучитьФорму)
  		// 3/2 пользователей: Фролов(FROLOV-ALEX); impacTest1(ZVIADI); 
	  возврат;
	КонецЕсли;  
	форма = Номенклатура.ПолучитьФорму("ФормаЭлемента");
   	форма.ПоказатьОсновноеИзображение();
	
	ЭлементыФормы.ПолеHTMLДокумента.УстановитьТекст( форма.ЭлементыФормы.ПолеHTMLДокумента.ПолучитьТекст() );
	
	НадписьФото = ЭлементыФормы.ПолеHTMLДокумента.ПолучитьТекст();
	i= найти(НадписьФото, "<BODY>");  НадписьФото = прав(НадписьФото, стрДлина(НадписьФото)-i-5);
	i= найти(НадписьФото, " src="""); //2-ое изображение
	
	НадписьФото = прав(НадписьФото, стрДлина(НадписьФото) - i - 5);
	j= найти(НадписьФото, "?t=");  НадписьФото = лев(НадписьФото , j-1);
	
	Надпись1 = НадписьФото;

КонецПроцедуры	

Процедура Надпись1Открытие(Элемент, СтандартнаяОбработка)
	Если Найти(Надпись1,"http://")>0 тогда
		СтандартнаяОбработка = ЛОЖЬ;
		ЗапуститьПриложение(Надпись1); // отражение картинки в  Браузере (по умолчанию)!
	КонецЕсли;
КонецПроцедуры
