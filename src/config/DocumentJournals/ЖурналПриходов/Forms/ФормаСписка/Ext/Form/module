
Процедура ПриОткрытии()
	
	ЖурналДокументовСписок.Отбор.Подразделение.ВидСравнения = ВидСравнения.Равно;
	подразделение = глТекущийПользователь.ОсновноеПодразделение;
	Если подразделение.ОбособленноеПодразделение тогда
		ЖурналДокументовСписок.Отбор.Подразделение.Значение = подразделение;
	иначе
		ЖурналДокументовСписок.Отбор.Подразделение.Значение = справочники.Подразделения.НайтиПоКоду("00005");
	КонецЕсли;
    ЖурналДокументовСписок.Отбор.Подразделение.Использование = истина;
	
КонецПроцедуры
