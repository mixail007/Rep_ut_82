
Процедура ПриОткрытии()
	
	Если НЕ ЗначениеНеЗаполнено(Ссылка) Тогда
		
		Если ПолеРегистра.Отбор.Найти("Объект") = Неопределено Тогда 
			ПолеРегистра.Отбор.Добавить("Объект");
		КонецЕсли;
		
		ПолеРегистра.Отбор["Объект"].Использование = Истина;
		ПолеРегистра.Отбор["Объект"].ВидСравнения = ВидСравнения.Равно;
		ПолеРегистра.Отбор["Объект"].Значение = Ссылка;
		
		ЭлементыФормы.ПолеРегистра.НастройкаОтбора["Объект"].Доступность = Ложь;
		
	КонецЕсли;
	
	ЭлементыФормы.ПолеРегистра.Колонки.Компьютер.Видимость = Ложь;
	ЭлементыФормы.ПолеРегистра.Колонки.Объект.Видимость = Ложь;
	ЭлементыФормы.ПолеРегистра.Колонки.НомерЗаписи.Видимость = Ложь;
	ЭлементыФормы.ПолеРегистра.Колонки.ОбъектМетаданных.Видимость = Ложь;	

КонецПроцедуры
