
Процедура ПриОткрытии()
	
	Если Раздел = 0 тогда
		Период = ТекущаяДата();
		Раздел = 3;
		Автор  = глТекущийПользователь;
		ДляКого = "Для всех";
	КонецЕсли;
	
	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Для всех"); // по умолчанию
	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Только для менеджеров");
	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Только для менеджеров филиалов");

	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Только для филиалов");

	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Только для менеджеров товарных групп");
	
	ЭлементыФормы.ДляКого.СписокВыбора.Добавить("Только для программистов");

	Если РольДоступна("ПравоЗавершенияРаботыПользователей") тогда
		  ЭлементыФормы.Раздел.Доступность = истина;
		  ЭлементыФормы.Автор.Доступность  = истина;
	КонецЕсли;

КонецПроцедуры

Процедура РазделПриИзменении(Элемент)
	// большие системы - доступна гиперссылка (на Word-документ)
	  ЭлементыФормы.ИмяСсылки.Доступность   = (Раздел=2);
  	  ЭлементыФормы.АдресСсылки.Доступность = (Раздел=2);
КонецПроцедуры

Процедура АдресСсылкиНачалоВыбора(Элемент, СтандартнаяОбработка)
	СтандартнаяОбработка = ложь;
	диалог1 = новый ДиалогВыбораФайла( РежимДиалогаВыбораФайла.Открытие );
	диалог1.Каталог = "\\Terminal\Филиалы\Описание 1С\";
	Если диалог1.Выбрать() тогда
		АдресСсылки = диалог1.ПолноеИмяФайла;
		ИмяСсылки   = стрЗаменить(диалог1.ПолноеИмяФайла, диалог1.Каталог, "");
	КонецЕсли;	
КонецПроцедуры
