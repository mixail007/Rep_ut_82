
Процедура ДействияФормыУдалить(Кнопка)
	
	Контр = Справочники.Контрагенты.НайтиПоРеквизиту("ИНН", "7703247653");
	
	Если ВвестиЗначение(Контр, "Выберите поставщика") тогда
	    Режим = РежимДиалогаВопрос.ДаНет;
		Текст = "Вы уверены, что хотите УДАЛИТЬ 
		|все остатки по поставщику: "+сокрЛП(Контр)+"?";
		Ответ = Вопрос(Текст, Режим, 0);
		Если Ответ = КодВозвратаДиалога.Нет Тогда
		    Возврат;
		КонецЕсли;
	
	МенеджерЗаписи = РегистрыСведений.ОстаткиНоменклатурыКонтрагентов.СоздатьНаборЗаписей();
	МенеджерЗаписи.Отбор.Контрагент.Установить(Контр);
	МенеджерЗаписи.Записать();  //чистка	
	Предупреждение("Очистка данных по поставщику: "+строка(Контр)+" завершена!");
	
	КонецЕсли;

КонецПроцедуры
