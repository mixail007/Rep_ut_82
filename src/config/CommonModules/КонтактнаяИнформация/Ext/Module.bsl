// Процедура считывает контактную информацию из ИБ в набор записей регистра сведений.
//
// Параметры:
//  НаборЗаписей - набор записей регистра сведений
//  Ссылка - Объект, по которому необходимо заполнить КИ
//
Процедура ПрочитатьКонтактнуюИнформацию(НаборЗаписей, Ссылка) Экспорт
		
	Если ТипЗнч(НаборЗаписей) <> Тип("РегистрСведенийНаборЗаписей.КонтактнаяИнформация") Тогда
		НаборЗаписей = РегистрыСведений.КонтактнаяИнформация.СоздатьНаборЗаписей();
	Иначе
		НаборЗаписей.Очистить();
	КонецЕсли; 
	
	НаборЗаписей.Отбор.Объект.Значение      = Ссылка;
	НаборЗаписей.Отбор.Объект.Использование = Истина;
	НаборЗаписей.Прочитать();
	
	ТаблицаНабора = НаборЗаписей.Выгрузить();
	ТаблицаНабора.Сортировать("Тип ВОЗР, Вид ВОЗР");
	НаборЗаписей.Загрузить(ТаблицаНабора);
	
	МассивВидов = НаборЗаписей.ВыгрузитьКолонку("Вид");
	
	Запрос = Новый Запрос;
	
	Запрос.УстановитьПараметр("ВидОбъектаКонтактнойИнформации", ВидОбъектаКИ(Ссылка));
	Запрос.УстановитьПараметр("МассивВидов"                   , МассивВидов);
	
	Запрос.Текст = "ВЫБРАТЬ
	|	ВидыКонтактнойИнформации.Ссылка КАК Вид,
	|	ВидыКонтактнойИнформации.Код КАК ВидКод,
	|	ВидыКонтактнойИнформации.Тип КАК Тип,
	//------------------------Обязательные поля - отмечаются в регистре как ЗначениеПоУмолчанию ------------------------
	|	выбор когда 
	| (ВидыКонтактнойИнформации.Тип = Значение(Перечисление.ТипыКонтактнойИнформации.Адрес)  
	|			 И ( ВидыКонтактнойИнформации.Ссылка = Значение(справочник.ВидыКонтактнойИнформации.ФактАдресКонтрагента)
	|				или ВидыКонтактнойИнформации.Ссылка = Значение(справочник.ВидыКонтактнойИнформации.ЮрАдресКонтрагента)
	|				или ВидыКонтактнойИнформации.Код = ""00015"" //почтовый
	|			 ) )
	|		ИЛИ ( ВидыКонтактнойИнформации.Тип = Значение(перечисление.ТипыКонтактнойИнформации.Телефон)
	|			и ВидыКонтактнойИнформации.Ссылка = Значение(справочник.ВидыКонтактнойИнформации.ТелефонКонтрагента)
	|           ) тогда Истина 
	|Иначе ЛОЖЬ Конец как ЗначениеПоУмолчанию
	|ИЗ
	|	Справочник.ВидыКонтактнойИнформации КАК ВидыКонтактнойИнформации
	|ГДЕ
	|	ВидыКонтактнойИнформации.ВидОбъектаКонтактнойИнформации = &ВидОбъектаКонтактнойИнформации
	|	И НЕ ВидыКонтактнойИнформации.Ссылка В (&МассивВидов)
	|
	|УПОРЯДОЧИТЬ ПО
	|	ЗначениеПоУмолчанию УБЫВ,
	|	Тип,
	|	ВидКод
	|АВТОУПОРЯДОЧИВАНИЕ";
	
	ТаблицаЗапроса = Запрос.Выполнить().Выгрузить();
	
	//+Лукьяненков 07.12.2017 //Добавляем сортировку по шаблону, далее по алфавитному порядку по колонке "Вид"
	Если ТипЗнч(Ссылка) = Тип("СправочникСсылка.Контрагенты") Тогда
		
		ШаблонСортировки = Новый Массив;
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38823")); //E-mail для рассылки уведомлений 
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00013")); //E-mail для обмена док-тами
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00002")); //Фактический адрес контрагента
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00001")); //Юридический адрес контрагента
		Если Ссылка.Экспорт Тогда
			ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38847")); //Экспорт (англ.) - Фактический адрес контрагента
			ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38846")); //Экспорт (англ.) - Юридический адрес контрагента
		КонецЕсли;
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00015")); //Почтовый адрес контрагента
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00021")); //Адрес доставки
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоНаименованию("Веб-страница")); //Веб-страница, Код 00018 содержат 2 элемента справочника 
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00005")); //Телефон контрагента
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("00029")); //Адрес доставки 02
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38844")); //Адрес доставки 03
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38853")); //Адрес доставки 04
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38856")); //Адрес доставки 05
		ШаблонСортировки.Добавить(Справочники.ВидыКонтактнойИнформации.НайтиПоКоду("38872")); //Терминал DPD
		
		ТаблицаДляСортировки = Новый ТаблицаЗначений;
		ТаблицаДляСортировки = ТаблицаЗапроса.Скопировать();
		ТаблицаДляСортировки.Очистить();
		
		Для каждого СтрокаШаблона из ШаблонСортировки Цикл
			НайденаяСтрока = ТаблицаЗапроса.Найти(СтрокаШаблона,"Вид");
			Если НайденаяСтрока <> неопределено Тогда
				НовСтрока = ТаблицаДляСортировки.Добавить();
				НовСтрока.Вид = НайденаяСтрока.Вид;
				НовСтрока.ВидКод = НайденаяСтрока.ВидКод;
				НовСтрока.ЗначениеПоУмолчанию = НайденаяСтрока.ЗначениеПоУмолчанию;
				НовСтрока.Тип = НайденаяСтрока.Тип;
				
				ТаблицаЗапроса.Удалить(НайденаяСтрока);
			КонецЕсли;		
		КонецЦикла;
		
		ТаблицаЗапроса.Сортировать("Вид");
		
		Для каждого СтрокаТаб из ТаблицаЗапроса Цикл
			
			НовСтрока = ТаблицаДляСортировки.Добавить();
			НовСтрока.Вид = СтрокаТаб.Вид;
			НовСтрока.ВидКод = СтрокаТаб.ВидКод;
			НовСтрока.ЗначениеПоУмолчанию = СтрокаТаб.ЗначениеПоУмолчанию;
			НовСтрока.Тип = СтрокаТаб.Тип;
			
		КонецЦикла;
		
		ТаблицаЗапроса = ТаблицаДляСортировки;
		
	КонецЕсли;
	//-Лукьяненков 07.12.2017
	
	Для каждого СтрокаТаблицы Из ТаблицаЗапроса Цикл
		Если СтрокаТаблицы.Вид.ПометкаУдаления = Ложь Тогда
			ЗаписьРегистра = НаборЗаписей.Добавить();
			ЗаписьРегистра.Вид    = СтрокаТаблицы.Вид;
			ЗаписьРегистра.Тип    = СтрокаТаблицы.Тип;
			ЗаписьРегистра.ЗначениеПоУмолчанию = СтрокаТаблицы.ЗначениеПоУмолчанию; // 15.03.2016
			ЗаписьРегистра.Объект = Ссылка;
		КонецЕсли;
	КонецЦикла; 

КонецПроцедуры

// Процедура записывает контактную информацию в ИБ из набора записей регистра сведений.
//
// Параметры:
//  НаборЗаписей - набор записей регистра сведений
//  Ссылка - Объект, по которому необходимо записать КИ
//  Отказ - Булево
//
Процедура ЗаписатьКонтактнуюИнформацию(НаборЗаписей, Ссылка, Отказ) Экспорт

	ТаблицаНабора = НаборЗаписей.Выгрузить();
	
	Индекс = 0;
	Пока 1 = 1 Цикл
		
		Если Индекс > НаборЗаписей.Количество() - 1 Тогда
			Прервать;
		КонецЕсли; 
		
		Запись = НаборЗаписей[Индекс];
		
		Если ЗначениеНеЗаполнено(Запись.Представление) Тогда
			НаборЗаписей.Удалить(Запись);
			Продолжить;
		КонецЕсли;
		
		Запись.Объект = Ссылка;
		
		Индекс = Индекс + 1;
		
	КонецЦикла;
	
	НаборЗаписей.Отбор.Объект.Значение = Ссылка;
	
	Попытка
		НаборЗаписей.Записать();
	Исключение
		СообщитьОбОшибке(ОписаниеОшибки(),, ("Элемент """ + СокрЛП(Ссылка) + """ не записан. Не записана контактная информация."));
		НаборЗаписей.Загрузить(ТаблицаНабора);
		Отказ = Истина;
		Возврат;
	КонецПопытки;
	
	ПрочитатьКонтактнуюИнформацию(НаборЗаписей, Ссылка)
	
КонецПроцедуры

