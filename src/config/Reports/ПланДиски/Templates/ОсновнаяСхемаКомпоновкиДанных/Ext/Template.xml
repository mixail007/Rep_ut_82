		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	МесячныйПланПродаж.Менеджер,
	МесячныйПланПродаж.НоменклатурнаяГруппа,
	МесячныйПланПродаж.ПериодПланирования,
	СУММА(МесячныйПланПродаж.КоличествоПлан) КАК КоличествоПлан,
	СУММА(МесячныйПланПродаж.СуммаПлан) КАК СуммаПлан
ПОМЕСТИТЬ План
ИЗ
	РегистрСведений.МесячныйПланПродаж КАК МесячныйПланПродаж
ГДЕ
	//МесячныйПланПродаж.НаправлениеПродаж = &amp;Диски и
	 МесячныйПланПродаж.ПериодПланирования МЕЖДУ &amp;Началопериода И &amp;ТекМесяц
{ГДЕ
	(МесячныйПланПродаж.Менеджер в (&amp;Менеджер)) }

СГРУППИРОВАТЬ ПО
	МесячныйПланПродаж.Менеджер,
	МесячныйПланПродаж.НоменклатурнаяГруппа,
	МесячныйПланПродаж.ПериодПланирования
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	ПродажиОбороты.Номенклатура.НоменклатурнаяГруппа,
	ПродажиОбороты.ДоговорКонтрагента.ОтветственноеЛицо,
	ПродажиОбороты.Период,
	СУММА(ПродажиОбороты.КоличествоОборот) КАК КоличествоОборот,
	СУММА(ПродажиОбороты.СтоимостьОборот) КАК СтоимостьОборот
ПОМЕСТИТЬ Продажи
ИЗ
	РегистрНакопления.Продажи.Обороты(&amp;НачалоПериода, &amp;конецПериода, Месяц, ) КАК ПродажиОбороты
{ГДЕ
	(ПродажиОбороты.ДоговорКонтрагента.ОтветственноеЛицо в (&amp;Менеджер))}

СГРУППИРОВАТЬ ПО
	ПродажиОбороты.Период,
	ПродажиОбороты.ДоговорКонтрагента.ОтветственноеЛицо,
	ПродажиОбороты.Номенклатура.НоменклатурнаяГруппа
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	План.Менеджер,
	План.НоменклатурнаяГруппа,
	ВЫБОР
		КОГДА План.ПериодПланирования = &amp;ТекМесяц
			ТОГДА "Текущий месяц"
		ИНАЧЕ "На начало месяца"
	КОНЕЦ КАК ПЕриод,
	СУММА(План.КоличествоПлан) КАК КоличествоПлан,
	СУММА(ЕСТЬNULL(Продажи.КоличествоОборот, 0)) КАК КоличествоФакт,
	СУММА(План.КоличествоПлан - Продажи.КоличествоОборот) КАК КоличествоВыполнить
ПОМЕСТИТЬ Свод
ИЗ
	План КАК План
		ЛЕВОЕ СОЕДИНЕНИЕ Продажи КАК Продажи
		ПО План.Менеджер = Продажи.ДоговорКонтрагентаОтветственноеЛицо
			И План.НоменклатурнаяГруппа = Продажи.НоменклатураНоменклатурнаяГруппа
			И План.ПериодПланирования = Продажи.Период

СГРУППИРОВАТЬ ПО
	План.Менеджер,
	План.НоменклатурнаяГруппа,
	ВЫБОР
		КОГДА План.ПериодПланирования = &amp;ТекМесяц
			ТОГДА "Текущий месяц"
		ИНАЧЕ "На начало месяца"
	КОНЕЦ
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Свод.Менеджер,
	Свод.НоменклатурнаяГруппа,
	Свод.КоличествоПлан,
	Свод.КоличествоФакт,
	Свод.КоличествоВыполнить,
	Свод.КоличествоПлан КАК ПланТекущийМесяц,
	0 КАК ПланПрошлыйМесяц
ПОМЕСТИТЬ ИТОГО
ИЗ
	Свод КАК Свод
ГДЕ
	Свод.ПЕриод = "Текущий месяц"

ОБЪЕДИНИТЬ ВСЕ

ВЫБРАТЬ
	Свод.Менеджер,
	Свод.НоменклатурнаяГруппа,
	Свод.КоличествоВыполнить,
	0,
	Свод.КоличествоВыполнить,
	0,
	Свод.КоличествоПлан - Свод.КоличествоФакт
ИЗ
	Свод КАК Свод
ГДЕ
	Свод.ПЕриод &lt;&gt; "Текущий месяц"
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	ИТОГО.Менеджер,
	ИТОГО.НоменклатурнаяГруппа,
	СУММА(ИТОГО.КоличествоПлан) КАК КоличествоПлан,
	СУММА(ИТОГО.КоличествоФакт) КАК КоличествоФакт,
	СУММА(ИТОГО.КоличествоВыполнить) КАК КоличествоВыполнить,
	СУММА(ИТОГО.ПланТекущийМесяц) КАК ПланТекущийМесяц,
	СУММА(ИТОГО.ПланПрошлыйМесяц) КАК ПланПрошлыйМесяц
ИЗ
	ИТОГО КАК ИТОГО

СГРУППИРОВАТЬ ПО
	ИТОГО.НоменклатурнаяГруппа,
	ИТОГО.Менеджер</query>
