			ТекДанные.Данные.Колонки.Добавить("ФлагТекПериод",     СоздатьТип("Булево"));
			ТекДанные.Данные.Колонки.Добавить("ФлагПредПериод",    СоздатьТип("Булево"));
			ТекДанные.Данные.Колонки.Добавить("ФлагАналогПериод",  СоздатьТип("Булево"));
			
			Для Каждого Склад Из СписокСкладов Цикл
				НоваяСтрока = ТекДанные.Данные.Добавить();
				НоваяСтрока.СкладПредставление = Склад.Значение;
			КонецЦикла;	
		КонецЕсли;

		КурсВалютыНач = КурсыВалют[Обход.Валюта];
		Если КурсВалютыНач = Неопределено Тогда
			КурсВалютыНач = ПолучитьКурсВалюты(Обход.Валюта, ДатаКон);
			КурсыВалют.Вставить(Обход.Валюта, КурсВалютыНач);
		КонецЕсли;
		
		Сумма = ПересчитатьИзВалютыВВалюту(
			Обход.Колво * Обход.Цена,
			Обход.Валюта,
			ВалютаОтчета,
			КурсВалютыНач.Курс,
			КурсыВалют[ВалютаОтчета].Курс,
			КурсВалютыНач.Кратность,
			КурсыВалют[ВалютаОтчета].Кратность);
		
        ТекСклад = ТекДанные.Данные.Найти(Обход.СкладПредставление, "СкладПредставление");
		ТекСклад[ИмяКолонки] = ТекСклад[ИмяКолонки] + Сумма;
		ТекСклад["Флаг" + ИмяКолонки] = Истина;
		
	КонецЦикла;

	// Обработаем полученные данные
	ПредСтрока = Неопределено;
	Для Каждого ТекСтрока Из ТабДанные Цикл
		Если ПредСтрока = Неопределено Тогда
			ПредСтрока = ТекСтрока;
			Продолжить;
		КонецЕсли;

		Для Индекс = 0 По СписокСкладов.Количество() - 1 Цикл
