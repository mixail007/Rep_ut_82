		Если Поз1 > Поз2 Тогда
			Сообщить("Показатель ""Валовая прибыль процентом"" значение периодичности не может превышать период анализа", СтатусСообщения.БезСтатуса);
			Сообщить("Показатель не сформирован!", СтатусСообщения.Внимание);
			Возврат;
		КонецЕсли;
		
	КонецЕсли;
	
	ДатаКонцаПериода  = КонецДня(ДатаКон);
    ДатаНачалаПериода = ПолучитьДатуНачалаПериода(ДатаКонцаПериода, ПериодАнализа);

	// Расчет дат предыдущего периода
	ФлагПредПериод = ПолучитьПараметрПоказателя( "Продажи_ВаловаяПрибыльПроцент", "ПредПериод") = "Да";
	Если ФлагПредПериод Тогда
        НачалоПредПериода = 0;
		КонецПредПериода  = 0;
		СмещениеПредИнтервала = ПрошлыйПериодПоНеделям(
			ДатаНачалаПериода,
			ДатаКонцаПериода,
			ПериодАнализа,
			Периодичность,
			НачалоПредПериода,
			КонецПредПериода);
	КонецЕсли;

	// Расчет дат аналогичного периода
	ФлагАналогПериод = Не ПолучитьПараметрПоказателя( "Продажи_ВаловаяПрибыльПроцент", "АналогПериод") = "Не выводить";
	Если ФлагАналогПериод Тогда
		
		НачалоАналогПериода = Неопределено;
		КонецАналогПериода  = Неопределено;
		
		СмещениеАналогИнтервала = ПолучитьДатыАналогПериода(ДатаНачалаПериода, ДатаКонцаПериода, ПериодАнализа, Периодичность, АналогПериод, НачалоАналогПериода, КонецАналогПериода);
		
	КонецЕсли;
	
	Запрос = Новый Запрос;
	ДатаНачалаПериода=НачалоГода(ДатаНачалаПериода);
	ДатаКонцаПериода=КонецГода(ДатаКонцаПериода)+1;
	Запрос.УстановитьПараметр("НачПериода", ДатаНачалаПериода);
	Запрос.УстановитьПараметр("КонПериода", ДатаКонцаПериода);
	
	НачПредПериода=НачалоГода(ДатаНачалаПериода-1);
	КонПредПериода=КонецГода(НачПредПериода)+1;
	
	НачАналогПериода=НачалоГода(НачПредПериода-1);
	КонАналогПериода=КонецГода(НачАналогПериода)+1;
	

	
	Запрос.Текст = "ВЫБРАТЬ
		|	СУММА(ЕстьNULL(ПродажиОбороты.СтоимостьОборот,0) - ЕстьNULL(СебестоимостьПродажОбороты.СтоимостьОборот,0)) КАК Сумма,
		|	0 КАК ТипПериода,
		|	ПродажиОбороты.Период КАК Период
		|ИЗ
		|	РегистрНакопления.Продажи.Обороты(&НачПериода, &КонПериода, " + Периодичность + ", ) КАК ПродажиОбороты
		|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ПродажиСебестоимость.Обороты(&НачПериода, &КонПериода, " + Периодичность + ", ) КАК СебестоимостьПродажОбороты
		|	ПО ПродажиОбороты.Номенклатура = СебестоимостьПродажОбороты.Номенклатура
		|	И ПродажиОбороты.ХарактеристикаНоменклатуры = СебестоимостьПродажОбороты.ХарактеристикаНоменклатуры
		|	И ПродажиОбороты.ЗаказПокупателя = СебестоимостьПродажОбороты.ЗаказПокупателя
		|	И ПродажиОбороты.Подразделение = СебестоимостьПродажОбороты.Подразделение
		|	И ПродажиОбороты.Период = СебестоимостьПродажОбороты.Период
		|	СГРУППИРОВАТЬ ПО ПродажиОбороты.Период
		|";

	Если ФлагПредПериод Тогда
		Запрос.УстановитьПараметр("НачПредПериода", НачПредПериода);
		Запрос.УстановитьПараметр("КонПредПериода", КонПредПериода);
		Запрос.Текст = Запрос.Текст + "
			|ОБЪЕДИНИТЬ
            |
			|ВЫБРАТЬ
			|	СУММА(ЕстьNULL(ПродажиОбороты.СтоимостьОборот,0) - ЕстьNULL(СебестоимостьПродажОбороты.СтоимостьОборот,0)) КАК Сумма,
			|	1 КАК ТипПериода,
			|	ПродажиОбороты.Период
			|ИЗ
			|	РегистрНакопления.Продажи.Обороты(&НачПредПериода, &КонПредПериода, " + Периодичность + ", ) КАК ПродажиОбороты
			|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ПродажиСебестоимость.Обороты(&НачПредПериода, &КонПредПериода, " + Периодичность + ", ) КАК СебестоимостьПродажОбороты
			|	ПО ПродажиОбороты.Номенклатура = СебестоимостьПродажОбороты.Номенклатура
			|	И ПродажиОбороты.ХарактеристикаНоменклатуры = СебестоимостьПродажОбороты.ХарактеристикаНоменклатуры
			|	И ПродажиОбороты.ЗаказПокупателя = СебестоимостьПродажОбороты.ЗаказПокупателя
			|	И ПродажиОбороты.Подразделение = СебестоимостьПродажОбороты.Подразделение
			|	И ПродажиОбороты.Период = СебестоимостьПродажОбороты.Период
			|	СГРУППИРОВАТЬ ПО ПродажиОбороты.Период";
	КонецЕсли;
	Если ФлагАналогПериод Тогда
		Запрос.УстановитьПараметр("НачАналогПериода", НачАналогПериода);
		Запрос.УстановитьПараметр("КонАналогПериода", КонАналогПериода);
		Запрос.Текст = Запрос.Текст + "
			|ОБЪЕДИНИТЬ
            |
			|ВЫБРАТЬ
			|	СУММА(ЕстьNULL(ПродажиОбороты.СтоимостьОборот,0) - ЕстьNULL(СебестоимостьПродажОбороты.СтоимостьОборот,0)) КАК Сумма,
			|	2 КАК ТипПериода,
			|	ПродажиОбороты.Период
			|ИЗ
			|	РегистрНакопления.Продажи.Обороты(&НачАналогПериода, &КонАналогПериода, " + Периодичность + ", ) КАК ПродажиОбороты
			|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрНакопления.ПродажиСебестоимость.Обороты(&НачАналогПериода, &КонАналогПериода, " + Периодичность + ", ) КАК СебестоимостьПродажОбороты
			|	ПО ПродажиОбороты.Номенклатура = СебестоимостьПродажОбороты.Номенклатура
			|	И ПродажиОбороты.ХарактеристикаНоменклатуры = СебестоимостьПродажОбороты.ХарактеристикаНоменклатуры
			|	И ПродажиОбороты.ЗаказПокупателя = СебестоимостьПродажОбороты.ЗаказПокупателя
			|	И ПродажиОбороты.Подразделение = СебестоимостьПродажОбороты.Подразделение
			|	И ПродажиОбороты.Период = СебестоимостьПродажОбороты.Период
			|	СГРУППИРОВАТЬ ПО ПродажиОбороты.Период";

	КонецЕсли;

	РезультатЗапроса = Запрос.Выполнить();
	Обход = РезультатЗапроса.Выбрать();

	ТабДанных = Новый ТаблицаЗначений;
	ТабДанных.Колонки.Добавить("Дата",         СоздатьТип("Дата"));
	ТабДанных.Колонки.Добавить("ТекПериод",    СоздатьТип("Число", 15, 2));
	ТабДанных.Колонки.Добавить("ПредПериод",   СоздатьТип("Число", 15, 2));
	ТабДанных.Колонки.Добавить("АналогПериод", СоздатьТип("Число", 15, 2));

	Пока Обход.Следующий() Цикл
		
		НоваяСтрока = ТабДанных.Добавить();
		Если Обход.ТипПериода = 0 Тогда // Текущий период
			
			НоваяСтрока.Дата      = Обход.Период;
			НоваяСтрока.ТекПериод = Обход.Сумма;
			
		ИначеЕсли Обход.ТипПериода = 1 Тогда // Предыдущий период
			СмещениеПредИнтервала=ДатаНачалапериода-НачПредПериода ;
			//НоваяСтрока.Дата       = НачалоДня( Обход.Период + СмещениеПредИнтервала);
			НоваяСтрока.Дата       =ДобавитьМесяц(Обход.Период,12);
			НоваяСтрока.ПредПериод = Обход.Сумма;
			
		ИначеЕсли Обход.ТипПериода = 2 Тогда // Аналогичной период
			СмещениеАналогИнтервала =  ДатаНачалапериода-НачАналогПериода;
			//НоваяСтрока.Дата         = НачалоДня( Обход.Период + СмещениеАналогИнтервала);
			НоваяСтрока.Дата       =ДобавитьМесяц(Обход.Период,24);
			НоваяСтрока.АналогПериод = Обход.Сумма;
			
		КонецЕсли;
		
	КонецЦикла;

	ТабДанных.Свернуть("Дата", "ТекПериод,ПредПериод,АналогПериод");
	ТабДанных.Колонки.Добавить("ТекПериодНакоп",    СоздатьТип("Число", 15, 2));
	ТабДанных.Колонки.Добавить("ПредПериодНакоп",   СоздатьТип("Число", 15, 2));
	ТабДанных.Колонки.Добавить("АналогПериодНакоп", СоздатьТип("Число", 15, 2));
	
	
	
	ТабДанных.Сортировать("Дата");
	
	ИтогПериод=0;
	ИтогПредПериод=0;
	ИтогАналогПериод=0;


	Для каждого строка ИЗ ТабДанных Цикл
		строка.ТекПериодНакоп=ИтогПериод;
		строка.ПредПериодНакоп=ИтогПредПериод;
		строка.АналогПериодНакоп=ИтогАналогПериод;
		
		ИтогПериод=ИтогПериод+строка.ТекПериод;
		ИтогПредПериод=ИтогПредПериод+строка.ПредПериод;
		ИтогАналогПериод=ИтогАналогПериод+строка.АналогПериод;
		
	КонецЦикла;	
	
	// ИтоговаяСтрока
	Строка=ТабДанных.Добавить();
	Строка.Дата=КонецГода(ДатаКон);
	Строка.ТекПериодНакоп=ИтогПериод;
	Строка.ПредПериодНакоп=ИтогПредПериод;
	Строка.АналогПериодНакоп=ИтогАналогПериод;


	Если НачалоДня(ДатаНачалаПериода) = НачалоДня(ДатаКонцаПериода) Тогда
		СтрПериод = "Валовая прибыль накопительно за " + ПредставлениеПериода(ДатаНачалаПериода, ДатаКонцаПериода);
	Иначе
		СтрПериод = "Валовая прибыль накопительно за период: " + ПредставлениеПериода(ДатаНачалаПериода, ДатаКонцаПериода);
	КонецЕсли;
	
	Макет  = мМакет.ПолучитьОбласть("ПродажиИПоступления");
	Секция = Макет.ПолучитьОбласть("ПродажиИПоступления");
	Секция.Параметры.Заголовок = "Валовая прибыль нарастающим итогом";
	Диаграмма = Секция.Рисунки.ГрафикМесяц.Объект;
	Диаграмма.Очистить();
	
	НомерТочки = 0;

	СтрокаТекущийПериод=ПредставлениеПериода(ДатаНачалаПериода,КонецГода(ДатаНачалаПериода),"ФП=Истина");
	Диаграмма.Серии.Добавить(СтрокаТекущийПериод);
	СтрокаПредПериод=ПредставлениеПериода(НачПредПериода,КонПредПериода,"ФП=Истина");
	Диаграмма.Серии.Добавить(СтрокаПредПериод);
	СтрокаАналогПериод=ПредставлениеПериода(НачАналогПериода,КонАналогПериода,"ФП=Истина");
	Диаграмма.Серии.Добавить(СтрокаАналогПериод);
		

	НомСтроки = 0;
	Для Каждого Строка Из ТабДанных Цикл
			Диаграмма.Точки.Добавить(Формат(Строка.Дата, "ДФ=дд.МММ"));
			
			НомСерии = 0;
			Диаграмма.УстановитьЗначение(НомСтроки, НомСерии, Строка.ТекПериодНакоп);
			НомСерии = НомСерии + 1;
			Диаграмма.УстановитьЗначение(НомСтроки, НомСерии, Строка.ПредПериодНакоп);
			НомСерии = НомСерии + 1;
			Диаграмма.УстановитьЗначение(НомСтроки, НомСерии, Строка.АналогПериодНакоп);
			

			НомСтроки = НомСтроки + 1;
			
		КонецЦикла;
	
	ТабДок.Вывести(Секция);

	мСтруктТабДок.Вставить("Продажи_ВаловаяПрибыльПроцент", ТабДок);

КонецПроцедуры // Продажи_ВаловаяПрибыльПроцентФормирование()

