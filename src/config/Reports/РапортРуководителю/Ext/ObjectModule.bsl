				Диаграмма.УстановитьЗначение(НомСтроки, НомСерии, Строка.АналогПериод);
			КонецЕсли;

			НомСтроки = НомСтроки + 1;
			
		КонецЦикла;
	
	ТабДок.Вывести(Секция);
	мСтруктТабДок.Вставить("Продажи_ОбъемОтгрузки", ТабДок);

