    Если ПустаяСтрока(Корень) Тогда
		НоваяСтрока = ДеревоПоказателей.Строки.Добавить();
	Иначе
		СтрокаРодитель = ДеревоПоказателей.Строки.Найти(Корень, "Показатель", Истина);
		НоваяСтрока = СтрокаРодитель.Строки.Добавить();
