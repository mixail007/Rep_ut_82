	Диаграмма.Очистить();
	Диаграмма.ОбластьЗаголовка.Текст = "";
	
	Диаграмма.БазовоеЗначение = ПолучитьПараметрПоказателя("Продажи_ВаловаяПрибыль", "СредняяПрибыль");
	
	//Диаграмма.Серии.Добавить("Текущий период");
