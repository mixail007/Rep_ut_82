	//	Диаграмма.Серии.Добавить("Предыдущий период");
	//КонецЕсли;
	//Если ФлагАналогПериод Тогда
	//	Диаграмма.Серии.Добавить("Аналогичный период");
	//КонецЕсли;

		// {Лапенков 
	СтрокаТекущийПериод=ПредставлениеПериода(ДатаНачалаПериода,ДатаКонцаПериода,"ФП=Истина");
	
	// }
	
	Диаграмма.Серии.Добавить(СтрокаТекущийПериод);
	Если ФлагПредПериод Тогда
		СтрокаПредПериод=ПредставлениеПериода(НачалоПредПериода,КонецПредПериода,"ФП=Истина");
		Диаграмма.Серии.Добавить(СтрокаПредПериод);
	КонецЕсли;
	Если ФлагАналогПериод Тогда
		СтрокаАналогПериод=ПредставлениеПериода(НачалоАналогПериода,КонецАналогПериода,"ФП=Истина");
		Диаграмма.Серии.Добавить(СтрокаАналогПериод);
		
	КонецЕсли;

	
	
	НомСтроки = 0;
	Для Каждого Строка Из ТабДанных Цикл
			Диаграмма.Точки.Добавить(Формат(Строка.Дата, "ДФ=дд.МММ"));
			
			НомТочки  = 0;
			Диаграмма.УстановитьЗначение(НомСтроки, НомТочки, Строка.ТекПериод);
			Если ФлагПредПериод Тогда
				НомТочки = НомТочки + 1;
				Диаграмма.УстановитьЗначение(НомСтроки, НомТочки, Строка.ПредПериод);
			КонецЕсли;
			Если ФлагАналогПериод Тогда
				НомТочки = НомТочки + 1;
				Диаграмма.УстановитьЗначение(НомСтроки, НомТочки, Строка.АналогПериод);
