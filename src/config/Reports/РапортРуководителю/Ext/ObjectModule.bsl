	КонецЕсли;

	РезультатЗапроса = Запрос.Выполнить();
	Обход = РезультатЗапроса.Выбрать();

	ТабДанных = Новый ТаблицаЗначений;
	ТабДанных.Колонки.Добавить("Дата",         СоздатьТип("Дата"));
	ТабДанных.Колонки.Добавить("ТекПериод",    СоздатьТип("Число", 15, 2));
