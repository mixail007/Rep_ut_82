	СписокСкладов.ЗагрузитьЗначения(ТабТемп.ВыгрузитьКолонку("СкладПредставление"));
	ТабТемп = 0;

	ВалютаОтчета = Константы.ВалютаУправленческогоУчета.Получить();
	КурсыВалют = Новый Соответствие;
	КурсыВалют.Вставить(ВалютаОтчета, ПолучитьКурсВалюты(ВалютаОтчета, ДатаКон));

	Для Каждого Обход Из РезультатЗапроса Цикл
		
		Если Обход.ТипПериода = 0 Тогда
			
			ПриведеннаяДата = Обход.Период;
