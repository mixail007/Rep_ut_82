	Перем Смещение;
	
	Если Периодичность = "День" Тогда
		
		Смещение = 3600 * 24; // Секунд в сутках
		
	ИначеЕсли Периодичность = "Неделя" Тогда
		
		Смещение = 3600 * 24 * 7;
		
	ИначеЕсли Периодичность = "Месяц" Тогда
		
		Смещение = КонецМесяца  (ДатаОтсчета) - НачалоМесяца  (ДатаОтсчета) + 1;
		
