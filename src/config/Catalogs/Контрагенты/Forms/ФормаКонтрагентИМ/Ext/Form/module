
Процедура ОсновныеДействияФормыОК(Кнопка)
	Если Фамилия = "" или Отчество ="" или Имя = "" 
		или Серия = "" или Номер ="" или КемВыдан = ""
		или Код = "" или Телефон ="" Тогда
		Сообщить("Не все обязательные поля заполнены!!!");
		
	Иначе
		Структура = Новый Структура;
		//Структура.Вставить("Фамилия",Фамилия);
		//Структура.Вставить("Имя",Имя);
		Структура.Вставить("Наименование",Наименование);
		Структура.Вставить("Серия",Серия);
		Структура.Вставить("Номер",Номер);
		Структура.Вставить("КемВыдан",КемВыдан);
		Структура.Вставить("Код",Код);
		Структура.Вставить("Телефон",Телефон);
		
	    ЭтаФорма.Закрыть(Структура);
		
	КонецЕсли;
КонецПроцедуры

Процедура ФамилияПриИзменении(Элемент)
	наименование = Фамилия + " "+ Имя + " " + Отчество;
КонецПроцедуры

Процедура ИмяПриИзменении(Элемент)
	наименование = Фамилия + " "+ Имя + " " + Отчество;
КонецПроцедуры

Процедура ОтчествоПриИзменении(Элемент)
	наименование = Фамилия + " "+ Имя + " " + Отчество;
КонецПроцедуры
