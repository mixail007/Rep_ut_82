
Процедура Скопировать(Кнопка)
	Отбор = Новый Структура;
	Отбор.Вставить("Объект",Контрагент);
	Отбор.Вставить("Тип",Перечисления.ТипыКонтактнойИнформации.Адрес);
	Отбор.Вставить("Вид",СКакого);
	
	ЗаписьАдреса = РегистрыСведений.КонтактнаяИнформация.Получить(Отбор);
	запись = РегистрыСведений.КонтактнаяИнформация.СоздатьМенеджерЗаписи();
	ЗаполнитьЗначенияСвойств(Запись,ЗаписьАдреса);
	Запись.Объект = Контрагент;
	Запись.тип = Перечисления.ТипыКонтактнойИнформации.Адрес;
	Запись.Вид = НаКакой;
	Запись.Записать(Истина);
	Закрыть("Успешно");
КонецПроцедуры

Процедура СКакогоНачалоВыбора(Элемент, СтандартнаяОбработка)
стандартнаяОбработка = Ложь;	
ОткрытьФормуВыбораВидаКИ(Истина,Элемент, Перечисления.ТипыКонтактнойИнформации.Адрес,перечисления.ВидыОбъектовКонтактнойИнформации.Контрагенты );	
КонецПроцедуры

Процедура НаКакойНачалоВыбора(Элемент, СтандартнаяОбработка)
стандартнаяОбработка = Ложь;	
ОткрытьФормуВыбораВидаКИ(Истина,Элемент, Перечисления.ТипыКонтактнойИнформации.Адрес,перечисления.ВидыОбъектовКонтактнойИнформации.Контрагенты);	
КонецПроцедуры
 