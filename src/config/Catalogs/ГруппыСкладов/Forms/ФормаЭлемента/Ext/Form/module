
Процедура КоманднаяПанель1Заполнить(Кнопка)
	
	Если Состав.Количество()>0 тогда
		Если Вопрос("Список не пустой! Очистить текущий список?", РежимДиалогаВопрос.ДаНет, 30, КодВозвратаДиалога.Да) = КодВозвратаДиалога.Нет Тогда
    	Возврат;
		КонецЕсли;
	КонецЕсли;
	
	Режим = РежимДиалогаВопрос.ДаНет;
	Ответ = Вопрос("Заполнить грузчиками Основного склада (Да)?
					|или грузчиками 5000 - нажмите [Нет]?", Режим, 30);
	Если Ответ = КодВозвратаДиалога.Да Тогда
		табл = справочники.ГруппыСкладов.ОсновнойСклад.Состав.Выгрузить();
	Иначе
		табл = справочники.ГруппыСкладов.НайтиПоНаименованию("5000").Состав.Выгрузить();
	КонецЕсли;

	
	ЭтотОбъект.Состав.Очистить();
	ЭтотОбъект.Состав.Загрузить( табл );
   
КонецПроцедуры

Процедура ПередЗаписью(Отказ)
	
	Если ЭтотОбъект.Состав.Количество()>0 тогда
		
		// Сворачиваем чтобы не было повторов!
	ЭтотОбъект.Состав.Свернуть("ФизЛицо"); 
	
		Если НЕ ЭтотОбъект.Транзит тогда
		Предупреждение("           Напоминание...
				   |Если полностью очистить список физ.лиц, 
				   |то в документах - будет использоваться
				   |список физ.лиц из группы 'Основной склад'.", 30);
		КонецЕсли;
	КонецЕсли;
			   
КонецПроцедуры
